@Article{pmid9605051,
   Author="Russell, M. W.  and Huse, D. M.  and Drowns, S.  and Hamel, E. C.  and Hartz, S. C. ",
   Title="{{D}irect medical costs of coronary artery disease in the {U}nited {S}tates}",
   Journal="Am. J. Cardiol.",
   Year="1998",
