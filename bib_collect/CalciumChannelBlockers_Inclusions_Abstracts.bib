@Article{pmid8869861,
   Author="Koenig, W.  and Lowel, H.  and Lewis, M.  and Hormann, A. ",
   Title="{{L}ong-term survival after myocardial infarction: relationship with thrombolysis and discharge medication. {R}esults of the {A}ugsburg {M}yocardial {I}nfarction {F}ollow-up {S}tudy 1985 to 1993}",
   Journal="Eur. Heart J.",
