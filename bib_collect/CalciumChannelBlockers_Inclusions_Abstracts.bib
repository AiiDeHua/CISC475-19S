@Article{pmid7620692,
   Author="Kubota, K.  and Kubota, N.  and Pearce, G. L.  and Prescott, P.  and Mann, R. D. ",
   Title="{{S}ignalling drug-induced rash with 36 drugs recently marketed in the {U}nited {K}ingdom and studied by {P}rescription-{E}vent {M}onitoring}",
   Journal="Int J Clin Pharmacol Ther",
   Year="1995",
   Volume="33",
